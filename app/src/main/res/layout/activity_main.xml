<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mark_brennan.hikerswatch.MainActivity"
    android:background="@drawable/background1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiker&apos;s Watch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: 32.7"
        android:id="@+id/lat"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: 32.7"
        android:id="@+id/lng"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/lat"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy: 4.7m/s"
        android:id="@+id/accuracy"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/lng"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: 20.0m"
        android:id="@+id/speed"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/accuracy"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bearing: 086"
        android:id="@+id/bearing"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_below="@+id/speed"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: \n76 Fake Street"
        android:id="@+id/address"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_below="@+id/bearing"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />
</RelativeLayout>
